[Unit]
Description=On premise polyfill service.
After=docker.service
BindsTo=docker.service
Conflicts=shutdown.target reboot.target halt.target

[Service]
# Without any proxy:
#ExecStart=/usr/bin/env docker run --env POLYFILL_PORT=80 --interactive --name polyfill -p 0.0.0.0:80:80 --rm ghcr.io/thaibault/on-premise-polyfill.io:latest-x86-64

# With proxy
ExecStartPre=-/usr/bin/env docker network create proxy
ExecStart=/usr/bin/env docker run --env POLYFILL_PORT=80 --expose 80 --interactive --name polyfill --network proxy --rm ghcr.io/thaibault/on-premise-polyfill.io:latest-x86-64

ExecStop=/usr/bin/env docker stop polyfill

NotifyAccess=all
# NOTE: Will be handled by docker.
Restart=always
RestartSec=10

User=root
WorkingDirectory=/srv/http/on-premise-polyfill.io

[Install]
WantedBy=multi-user.target
